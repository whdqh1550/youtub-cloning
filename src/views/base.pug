doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            if fakeUser.loggedIn 
                small hello #{fakeUser.username}
            nav 
                ul
                    if fakeUser.loggedIn
                        li 
                            a(href="/login") Log Out
                    else
                        li 
                            a(href="/login") Log in
            h1=pageTitle
        main 
            block content
    include partials/footer.pug
        